<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <link rel="stylesheet" href="/queue.css">
  <link rel="stylesheet" href="/navbar.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous" />

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
   

</head>
<body style="background-color: black;">

    <div class="sidenav">
        <a href="/feed">Home</a>
        <a href="/explore">Explore</a>
        <a href="/queue">Queue</a>
        <a href="/pfp">Profile</a>
    </div>

  <div class="center">

      {{#if message}}
        <h1 style="color:white;">{{message}}</h1>
      {{/if}}

      {{!-- <!-- self-selector for development purposes -->
      <div class="self-select">
          <form action="/select-self" method="GET">
              <select  name="self-dropdown" class="form-select form-select lg mb-3" id="self-dropdown"
                                                                                    onchange="this.form.submit()">
                  <option>~DEV~ Choose urself ~DEV~</option>
                  {{#if users}}
                    {{#each users}}
                        <option value={{this}}>{{this}}</option>
                    {{/each}}
                  {{/if}}

              </select>
          </form>
      </div>
      <!-- end self selector --> --}}

    <p>HI</p>
      <!-- friends selector -->
      <div class="friends-select">
          {{#if friends}}
          <form action="/select-friend" method="GET">
              <select onchange="this.form.submit()" class="form-select form-select-lg mb-3" aria-label=".form-select-lg" id="friends-dropdown" name="friends-dropdown">
                  <option>Choose a friend</option>
                      {{#each friends}}
                        <option 
                            value={{this.id}}>
                            {{this.username}}
                        </option>
                      {{/each}}
                  {{/if}}
              </select>

              <!-- not necessary since we have cookies -->
              <input type="hidden" name="madeq" value={{self}}>
          </form>
      </div>
      <!-- end friend selector -->

      {{!-- Songs If playlist is already created --}}
      {{!-- <div class="songsContainer"></div>
      <ul>
      {{#each songs}}
                <li>{{this.songname}}</li>
            <ul>
                {{#each artists}}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        {{/each}}
        </ul> --}}

        {{#each songs}}
            {{this.songname}}
        {{/each}}




      <div class="queues">
          {{#if friend}}
            <h1 style="color:white;">{{friend}}</h1>
            {{#if currentQueue}}
                <ul>
                {{#each currentQueue}}
                    <li style="color:white;">{{this.songname}}</li>
                    <ul>
                        {{#each artists}}
                            <li style="color:white;">{{this}}</li>
                        {{/each}}
                    </ul>
                {{/each}}
                </ul>
            {{/if}}
          {{/if}}
                  
      </div>
</div>

{{#if friendName}}
    {{#if theirQueue}}
        <button type="button" style = "color:white;"class="createQueueButton" id="searchBtn">Add a song?</button>
    {{else}}
        <button type="button" style="color:black;" class="createQueueButton" id="queueBtn">Create {{friendName}}'s queue!</button>


    <!--playlist/queue creation modal -->
        <div id="playlistModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5>Create {{friendName}}'s queue!</h5>
                        <button class="close" type="button" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <form action="/make_queue" method="get">
                            <div class="form-group">
                                <label for="queuename">Name it <3</label>
                                <input type="text" name="queue_name" class="form-control" id="queuename" placeholder="Name" + {{friend}} + "'s queue'!">
                            <input type="hidden" name="selfID" value={{self}}>
                            <input type="hidden" name="friendID" value={{friendID}}>
                            <input type="hidden" name="friendName" value={{friendName}}>
                            </div>
                            <button type="submit" class="btn btn-success btn-sm">Make dat hoe</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger" data-dismiss="modal">Nvm. I hate {{friend}}.</button>
                    </div>
                </div>
            </div>
        </div>
    <!-- end playlist/queue creation modal -->


    {{/if}}
{{/if}}


<!-- find song modal -->
<div id="searchModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Search <3</h5>
                <button class="close" type="button" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/search" method="get">
                    <div class="form-group">
                        <label for="songname">Song name <3</label>
                    <input type="text" name="songname" class="form-control" id="songname" placeholder="Enter a song!">
                    <input type="hidden" name="selfID" value={{self}}>
                    <input type="hidden" name="friendID" value={{friendID}}>
                    </div>
                    <button type="submit" class="btn btn-success btn-sm">Search dat hooooooe</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" data-dismiss="modal">Nvm. I hate {{friendName}}.</button>
            </div>
        </div>
    </div>
</div>
<!--find song modal-->

<!-- select songs returned from search to add to playlist -->
<div id="queueModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Which song?</h5>
                <button class="close" type="button" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/addToPlaylist" method="get">
                    {{#each songsFromSearch}}
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id={{this.songname}} name="songLink" value={{this.link}}>
                        <label class="form-check-label" for={{this.songname}}>
                            {{this.songname}}
                        </label>
                        <ul>
                            {{#each artists}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                    <input type="hidden" name="friendID" value={{friendID}}>
                    <input type="hidden" name="selfID" value={{self}}>
                    <button type="submit" class="btn btn-success btn-sm">Add it to {{friendName}}'s queue!</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger" data-dismiss="modal">Nvm. I hate {{friendName}}.</button>
            </div>
        </div>
    </div>
</div>
<!-- end add song to queue modal -->


{{#if songsFromSearch}}
    <script>
        $(document).ready(function() {
                    $("#queueModal").modal("show");
                })
    </script>
{{else}}
    <script>
        $(document).ready(function() {
                    $("#queueModal").modal("hide");
                })
    </script>
{{/if}}

<script>
    
    $(document).ready(function() {
            $("#searchBtn").click(function() {
                    $("#searchModal").modal();
                })
            $("#queueBtn").click(function() {
                    $("#playlistModal").modal();
                })

        })
</script>

</body>
</html>
